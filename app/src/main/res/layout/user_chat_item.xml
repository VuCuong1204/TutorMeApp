<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/fbase_dimen_8"
        android:paddingStart="@dimen/fbase_dimen_16">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivUserChatAvatar"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/fbase_dimen_60"
            android:layout_height="@dimen/fbase_dimen_60"
            android:layout_marginEnd="@dimen/fbase_dimen_10"
            android:src="@drawable/bg_gender_male"
            app:shapeAppearanceOverlay="@style/CircleImageView" />

        <TextView
            android:id="@+id/tvUserChatContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/fbase_dimen_4"
            android:maxWidth="@dimen/fbase_dimen_240"
            android:padding="@dimen/fbase_dimen_6"
            android:textColor="@color/black"
            android:textSize="@dimen/fbase_text_size_14"
            tools:text="hello Vũ Quốc Cường" />

    </LinearLayout>

</layout>
