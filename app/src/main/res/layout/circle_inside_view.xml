<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCircleInsideBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_circle_inside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCircleInsideAvatar"
        android:layout_width="@dimen/fbase_dimen_130"
        android:layout_height="@dimen/fbase_dimen_130"
        android:layout_marginBottom="@dimen/fbase_dimen_10"
        android:paddingTop="@dimen/fbase_dimen_20"
        android:src="@drawable/ic_splash"
        app:layout_constraintBottom_toBottomOf="@+id/ivCircleInsideBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ivCircleInsideBackground"
        app:layout_constraintTop_toBottomOf="@id/ivCircleInsideAvatar" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/fbase_dimen_1"
        android:background="@color/neutral_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivCircleInsideBackground" />

</androidx.constraintlayout.widget.ConstraintLayout>
