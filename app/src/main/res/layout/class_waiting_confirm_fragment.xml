<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <FrameLayout
            android:id="@+id/flClassWaitingConfirmRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_back2_bottom_corner_20">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivClassWaitingConfirmBack"
                android:layout_width="@dimen/fbase_dimen_36"
                android:layout_height="@dimen/fbase_dimen_36"
                android:layout_marginVertical="@dimen/fbase_dimen_10"
                android:layout_marginStart="@dimen/fbase_dimen_16"
                android:background="@drawable/ripple_bg_white_corner_12"
                android:padding="@dimen/fbase_dimen_10"
                android:src="@drawable/ic_arrow_long_left" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvClassWaitingConfirmContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/fbase_dimen_14"
                android:fontFamily="@font/font_raleway_bold"
                android:text="@string/class_waiting_confirm"
                android:textColor="@color/text6"
                android:textSize="@dimen/fbase_text_size_18" />

            <vn.tutorme.mobile.presenter.widget.categoryclass.CategoryClassView
                android:id="@+id/ccvClassWaitingConfirmHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fbase_dimen_64" />

        </FrameLayout>

        <vn.tutorme.mobile.presenter.widget.collection.CollectionView
            android:id="@+id/cvClassWaitingConfirmRoot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/flClassWaitingConfirmRoot"
            android:layout_marginHorizontal="@dimen/fbase_dimen_16"
            android:overScrollMode="never" />

    </RelativeLayout>

</layout>
