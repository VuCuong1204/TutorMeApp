<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/llBottomSheetChatRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_dialog"
        android:gravity="bottom"
        android:orientation="vertical"
        android:weightSum="10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:background="@drawable/shape_bg_white_corner_top_16">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBottomSheetChatClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="?selectableItemBackgroundBorderless"
                android:padding="@dimen/fbase_dimen_16"
                android:src="@drawable/ic_delete_gray" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBottomSheetChatCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/fbase_dimen_12"
                android:fontFamily="@font/font_worksans_medium"
                android:textColor="@color/black"
                tools:text="10 bình luận" />

            <vn.tutorme.mobile.presenter.widget.collection.CollectionView
                android:id="@+id/cvBottomSheetChatRoot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/clBottomSheetChatSend"
                android:layout_below="@+id/ivBottomSheetChatClose"
                android:layout_marginTop="@dimen/fbase_dimen_2"
                android:layout_marginBottom="@dimen/fbase_dimen_10" />

            <ProgressBar
                android:id="@+id/pbBottomSheetChatLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/clBottomSheetChatSend"
                android:layout_below="@+id/ivBottomSheetChatClose"
                android:layout_centerInParent="true"
                android:indeterminate="true"
                android:indeterminateTint="@color/primary"
                android:visibility="gone" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clBottomSheetChatSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/fbase_dimen_10">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtBottomSheetChatContent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/fbase_dimen_20"
                    android:layout_marginEnd="@dimen/fbase_dimen_10"
                    android:background="@drawable/shape_bg_gray_10_corner_8"
                    android:fontFamily="@font/font_raleway_medium"
                    android:gravity="center_vertical"
                    android:hint="@string/input_commenter"
                    android:imeOptions="actionDone"
                    android:maxHeight="@dimen/fbase_dimen_100"
                    android:minHeight="@dimen/fbase_dimen_40"
                    android:paddingHorizontal="@dimen/fbase_dimen_10"
                    android:paddingVertical="@dimen/fbase_dimen_4"
                    android:textColor="@color/black"
                    android:textColorHint="@color/neutral_14"
                    android:textCursorDrawable="@drawable/shape_primary_bg_cursor_edit_text"
                    android:textSize="@dimen/fbase_text_size_14"
                    app:layout_constraintEnd_toStartOf="@+id/ivBottomSheetChatSend"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivBottomSheetChatSend"
                    android:layout_width="@dimen/fbase_dimen_30"
                    android:layout_height="@dimen/fbase_dimen_30"
                    android:layout_marginTop="@dimen/fbase_dimen_6"
                    android:layout_marginEnd="@dimen/fbase_dimen_10"
                    android:background="?selectableItemBackgroundBorderless"
                    android:padding="@dimen/fbase_dimen_2"
                    android:src="@drawable/ic_send_disable"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>

    </LinearLayout>

</layout>
