<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/flInputFeedBackRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/popup_background">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/civInputFeedBackRoot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_title_center"
                app:layout_constraintBottom_toTopOf="@id/llInputFeedBackRoot"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivInputFeedBackAvatar"
                android:layout_width="@dimen/fbase_dimen_40"
                android:layout_height="@dimen/fbase_dimen_40"
                android:src="@drawable/ic_message"
                app:layout_constraintBottom_toBottomOf="@id/civInputFeedBackRoot"
                app:layout_constraintEnd_toEndOf="@id/civInputFeedBackRoot"
                app:layout_constraintStart_toStartOf="@id/civInputFeedBackRoot"
                app:layout_constraintTop_toTopOf="@id/civInputFeedBackRoot" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/fbase_dimen_10"
                android:layout_marginTop="@dimen/fbase_dimen_38"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="@id/civInputFeedBackRoot"
                app:layout_constraintStart_toStartOf="@id/civInputFeedBackRoot"
                app:layout_constraintTop_toBottomOf="@id/ivInputFeedBackAvatar" />

            <LinearLayout
                android:id="@+id/llInputFeedBackRoot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fbase_dimen_40"
                android:background="@drawable/shape_bg_white_bottom_corner_14"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/fbase_dimen_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/civInputFeedBackRoot"
                app:layout_constraintStart_toStartOf="@id/civInputFeedBackRoot"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtInputFeedBackContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_bg_gray_10_corner_8"
                    android:fontFamily="@font/font_raleway_medium"
                    android:gravity="center_vertical"
                    android:hint="@string/input_feedback"
                    android:imeOptions="actionDone"
                    android:maxHeight="@dimen/fbase_dimen_100"
                    android:maxLength="200"
                    android:minHeight="@dimen/fbase_dimen_50"
                    android:paddingHorizontal="@dimen/fbase_dimen_10"
                    android:paddingVertical="@dimen/fbase_dimen_4"
                    android:textColor="@color/black"
                    android:textColorHint="@color/neutral_14"
                    android:textCursorDrawable="@drawable/shape_primary_bg_cursor_edit_text"
                    android:textSize="@dimen/fbase_text_size_14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fbase_dimen_16"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvInputFeedBackConfirm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/fbase_dimen_10"
                        android:layout_weight="1"
                        android:background="@drawable/shape_bg_gray_corner_16"
                        android:enabled="false"
                        android:fontFamily="@font/font_raleway_bold"
                        android:gravity="center"
                        android:paddingVertical="@dimen/fbase_dimen_16"
                        android:text="@string/confirm_second"
                        android:textColor="@color/white"
                        android:textSize="@dimen/fbase_text_size_14" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvInputFeedBackClose"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/fbase_dimen_10"
                        android:layout_weight="1"
                        android:background="@drawable/ripple_bg_white_corner_16_stroke_1"
                        android:fontFamily="@font/font_raleway_bold"
                        android:gravity="center"
                        android:paddingVertical="@dimen/fbase_dimen_16"
                        android:text="@string/close"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/fbase_text_size_14" />

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</layout>
