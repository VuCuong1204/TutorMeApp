<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivTitleTimeLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_title_time"
            app:layout_constraintBottom_toBottomOf="@id/tvTitleTimeName"
            app:layout_constraintEnd_toEndOf="@id/vTitleTimeV1"
            app:layout_constraintStart_toStartOf="@id/vTitleTimeV1"
            app:layout_constraintTop_toTopOf="@id/tvTitleTimeName" />

        <View
            android:id="@+id/vTitleTimeV1"
            android:layout_width="@dimen/fbase_dimen_1"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/fbase_dimen_6"
            android:background="@color/neutral_14"
            app:layout_constraintBottom_toTopOf="@id/ivTitleTimeLeft"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/vTitleTimeV2"
            android:layout_width="@dimen/fbase_dimen_1"
            android:layout_height="0dp"
            android:background="@color/neutral_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/vTitleTimeV1"
            app:layout_constraintStart_toStartOf="@id/vTitleTimeV1"
            app:layout_constraintTop_toBottomOf="@id/ivTitleTimeLeft" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitleTimeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fbase_dimen_18"
            android:layout_marginTop="@dimen/fbase_dimen_20"
            android:layout_marginBottom="@dimen/fbase_dimen_12"
            android:fontFamily="@font/font_worksans_bold"
            android:textColor="@color/text2"
            android:textSize="@dimen/fbase_text_size_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/vTitleTimeV1"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="19:00 - 19:45" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
