<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivForgotPasswordBackground"
            android:layout_width="0dp"
            android:layout_height="@dimen/fbase_dimen_400"
            android:scaleType="center"
            android:src="@drawable/bg_login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivForgotPasswordBack"
            android:layout_width="@dimen/fbase_dimen_36"
            android:layout_height="@dimen/fbase_dimen_36"
            android:layout_marginVertical="@dimen/fbase_dimen_20"
            android:layout_marginStart="@dimen/fbase_dimen_16"
            android:background="@drawable/ripple_bg_comp_corner_12"
            android:padding="@dimen/fbase_dimen_10"
            android:src="@drawable/ic_arrow_white_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <vn.tutorme.mobile.presenter.widget.background.CircleInSideView
            android:id="@+id/civForgotPasswordAvatar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/ivForgotPasswordBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/neutral_15"
            android:paddingHorizontal="@dimen/fbase_dimen_32"
            android:paddingTop="@dimen/fbase_dimen_6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/civForgotPasswordAvatar">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvForgotPasswordTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_raleway_bold"
                android:text="@string/forgot_password_v2"
                android:textColor="@color/primary"
                android:textSize="@dimen/fbase_text_size_26"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvForgotPasswordWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fbase_dimen_8"
                android:fontFamily="@font/font_raleway_medium"
                android:text="@string/please_input_email"
                android:textColor="@color/neutral_13"
                android:textSize="@dimen/fbase_text_size_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvForgotPasswordTitle" />

            <vn.tutorme.mobile.presenter.widget.textfield.TextFieldView
                android:id="@+id/tfvForgotPasswordAccount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fbase_dimen_30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvForgotPasswordWelcome"
                app:padding_right_icon="@dimen/fbase_dimen_12"
                app:right_icon="@drawable/ic_delete_gray"
                app:text_hint="@string/input_email"
                app:text_title="@string/input_email" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvForgotPasswordConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fbase_dimen_24"
                android:background="@drawable/ripple_bg_primary_corner_14"
                android:fontFamily="@font/font_raleway_semibold"
                android:gravity="center"
                android:paddingVertical="@dimen/fbase_dimen_16"
                android:text="@string/send_code_confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/fbase_text_size_14"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tfvForgotPasswordAccount" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
