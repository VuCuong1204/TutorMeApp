<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clCategoryClassRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvCategoryClassTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_raleway_medium"
            android:textColor="@color/text1"
            android:textSize="@dimen/fbase_text_size_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Chờ xác nhận" />

        <View
            android:id="@+id/vCategoryClass"
            android:layout_width="@dimen/fbase_dimen_50"
            android:layout_height="@dimen/fbase_dimen_4"
            android:visibility="gone"
            android:layout_marginTop="@dimen/fbase_dimen_10"
            android:background="@drawable/shape_bg_primary_corner_4"
            app:layout_constraintEnd_toEndOf="@id/tvCategoryClassTitle"
            app:layout_constraintStart_toStartOf="@id/tvCategoryClassTitle"
            app:layout_constraintTop_toBottomOf="@id/tvCategoryClassTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
