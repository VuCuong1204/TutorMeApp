<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_white_corner_8"
        android:padding="@dimen/fbase_dimen_16">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHappenedLessonTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/bg_clock_gray"
            android:drawablePadding="@dimen/fbase_dimen_8"
            android:fontFamily="@font/font_worksans_semibold"
            android:gravity="center"
            android:textColor="@color/text1"
            android:textSize="@dimen/fbase_text_size_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="19:00 - 19:45" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHappenedLessonAttendance"
            android:layout_width="0dp"
            android:layout_height="@dimen/fbase_dimen_46"
            android:layout_marginTop="@dimen/fbase_dimen_16"
            android:background="@drawable/ripple_bg_white_corner_14_stroke_1"
            android:fontFamily="@font/font_raleway_semibold"
            android:gravity="center"
            android:drawableStart="@drawable/ic_badge_inactive"
            android:paddingHorizontal="@dimen/fbase_dimen_10"
            android:text="@string/attendance"
            android:textColor="@color/primary"
            android:textSize="@dimen/fbase_text_size_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvHappenedLessonTime"
            app:layout_constraintWidth_default="spread"
            app:layout_constraintWidth_percent="0.45" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHappenedLessonJoinRoom"
            android:layout_width="0dp"
            android:layout_height="@dimen/fbase_dimen_46"
            android:background="@drawable/ripple_bg_gray_corner_14"
            android:fontFamily="@font/font_raleway_semibold"
            android:gravity="center"
            android:minWidth="@dimen/fbase_dimen_140"
            android:paddingHorizontal="@dimen/fbase_dimen_26"
            android:paddingVertical="@dimen/fbase_dimen_12"
            android:text="@string/join_now"
            android:textColor="@color/primary"
            android:textSize="@dimen/fbase_text_size_14"
            app:layout_constraintBottom_toBottomOf="@+id/tvHappenedLessonAttendance"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvHappenedLessonAttendance"
            app:layout_constraintTop_toTopOf="@id/tvHappenedLessonAttendance"
            app:layout_constraintWidth_default="spread"
            app:layout_constraintWidth_percent="0.45" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
