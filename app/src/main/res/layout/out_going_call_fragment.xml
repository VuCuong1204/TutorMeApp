<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/flOutGoingCallView1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fbase_dimen_200" />

        <FrameLayout
            android:id="@+id/flOutGoingCallView2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fbase_dimen_200"
            android:layout_below="@id/flOutGoingCallView1"
            android:layout_marginTop="@dimen/fbase_dimen_20" />

        <Button
            android:id="@+id/btnOutGoingCallConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/flOutGoingCallView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/fbase_dimen_20"
            android:text="Confirm" />

    </RelativeLayout>

</layout>
