<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/flConfirmVideoRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_dialog">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fbase_dimen_240"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/fbase_dimen_16"
            android:background="@drawable/shape_bg_white_corner_16">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvConfirmVideoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/fbase_dimen_16"
                android:fontFamily="@font/font_raleway_bold"
                android:text="@string/incoming_call"
                android:textColor="@color/black"
                android:textSize="@dimen/fbase_text_size_26"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvConfirmVideoUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvConfirmVideoTitle"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/font_raleway_semibold"
                android:textColor="@color/black"
                android:textSize="@dimen/fbase_text_size_16"
                tools:text="Vũ Cường" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivConfirmVideoReject"
                android:layout_width="@dimen/fbase_dimen_60"
                android:layout_height="@dimen/fbase_dimen_60"
                android:layout_below="@id/tvConfirmVideoUserName"
                android:layout_marginStart="@dimen/fbase_dimen_90"
                android:layout_marginTop="@dimen/fbase_dimen_40"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_call_reject" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivConfirmVideoAccept"
                android:layout_width="@dimen/fbase_dimen_60"
                android:layout_height="@dimen/fbase_dimen_60"
                android:layout_below="@id/tvConfirmVideoUserName"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/fbase_dimen_40"
                android:layout_marginEnd="@dimen/fbase_dimen_90"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_video_call_accept" />

        </RelativeLayout>

    </FrameLayout>

</layout>
